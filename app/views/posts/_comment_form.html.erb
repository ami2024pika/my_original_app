<% if user_signed_in? %>
  <%= form_with model: [post, post.post_comments.new], local: true, class: "w-100", method: :post do |f| %>
    <%= f.text_area :body, class: "form-control shadow-sm md-4 pt-3 ps-3", style: "font-size: 16px; min-height: 150px;", placeholder: "コメントを投稿..." %>
    <div class="text-end my-4">
      <%= f.submit "コメントする", class: "btn btn-orange px-4 fs-6" %>
    </div>
  <% end %>
<% else %>
  <div class="card my-5">
    <div class="card-body box-shadow text-center py-4" style="font-size: 14px;">
      <p class="card-text text-secondary">コメントを入力するには
        <%= link_to "ログイン", new_user_session_path, class: "text-decoration-none text-orange", data: { turbolinks: false } %>
        が必要です
      </p>
      <p class="card-text">
        <span class="text-secondary">登録がまだの方は</span>
        <%= link_to "新規会員登録", new_user_registration_path, class: "btn btn-orange px-4 ms-3", data: { turbolinks: false } %>
      </p>
    </div>
  </div>
<% end %>