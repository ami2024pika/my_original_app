<div class="card shadow-sm border-0 py-3 px-4 mb-4">
  <div class="d-flex align-items-center pt-3">
    <%= image_tag post_comment.user.avatar.url, class: "rounded-circle flex-shrink-0 fit-cover me-3", width: "35px", alt: "icon_1" %>
    <p class="mb-0 pe-2"><%= post_comment.user.username %></p>
    <p class="text-secondary mb-0 ps-2" style="font-size: 14px;"><%= post_comment.created_at.strftime("%Y.%-m.%d") %></p>
  </div>
  <div class="card-body pb-4 px-0">
    <%= simple_format(post_comment.body, { class: "card-text text-secondary pt-2", style: "font-size: 16px;" }) %>
  </div>
</div>