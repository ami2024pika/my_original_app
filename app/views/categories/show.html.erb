<%= render "layouts/category-header" %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="text-center">
        <p class="title-text-orange mt-5">「<%= @category.name %>」 に関する投稿</p>
      </div>
      
      <%= render partial: "posts/post", collection: @posts %>
      
      <%= paginate @posts, theme: 'bootstrap-5' %>
    </div>
  </div>
</div>
