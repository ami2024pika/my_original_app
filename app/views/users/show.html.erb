<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10 mt-5">
      <div class="d-flex justify-content-evenly justify-content-md-center">
        <div class="col-md-4 d-flex justify-content-end">
          <% if current_user.avatar.present? %>
            <%= image_tag current_user.avatar.url, alt: "ユーザーアイコン", class: "rounded-circle", style: "border-radius: 50%; width: 120px; height: 120px; object-fit:cover;" %>
          <% else %>
            <%= image_tag "default_icon.png", alt: "default_icon", class: "rounded-circle", style: "width: 120px; height: 120px; object-fit: cover;" %>
          <% end %>
        </div>
        <div class="col-md-6 d-flex align-items-center justify-content-md-center justify-content-lg-start">
          <div class="px-lg-5">
            <div class="d-flex align-items-center">
              <h1><%= current_user.username %></h1>
              <%= link_to "プロフィールを編集", edit_user_registration_path, class: "btn edit-profile-btn" %>
            </div>
            <p><%= current_user.email %></p>
          </div>
        </div>
      </div>

      <div class="text-center">
        <p class="title-text-orange mt-5"><%= current_user.username %> さんの投稿</p>
        
        <% if @posts.count == 0 %>
          <p class="fw-bold" style="margin: 200px 0; font-size: 20px;">現在、投稿はありません</p>
        <% end %>
      </div>
      
      <%= render partial: "posts/post", collection: @posts %>
      <%= paginate @posts, theme: 'bootstrap-5' %>
    </div>
  </div>
</div>