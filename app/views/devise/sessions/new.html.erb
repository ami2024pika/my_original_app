<div class="container">
  <p class="text-center fs-2 mt-5 mb-4 fw-bold">ログイン</p>
  
  <div class="row justify-content-center">
    <div class="col-10 col-md-6">
        <%= form_with model: resource, url: session_path(resource_name), local: true do |f| %>
          <div class="pb-4">
            <%= f.label :email, "メールアドレス", class: "fw-bold mb-2" %>
            <span class="small text-orange fw-bold">必須</span>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          
          <div class="pb-4">
            <%= f.label :password, "パスワード", class: "fw-bold mb-2" %>
            <span class="small text-orange fw-bold">必須</span>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "6文字以上で入力してください", class: "form-control" %>
          </div>
        
          <div class="text-center">
            <%= f.submit "ログインする", class: "btn btn-orange px-4 py-2" %>
          </div>
        <% end %>
    </div>
  </div>
</div>