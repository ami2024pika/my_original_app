<div class="container">
  <p class="text-center fs-2 mt-5 mb-4 fw-bold">マイページ編集</p>
  
  <div class="row justify-content-center">
    <div class="col-10 col-md-6">
      <%= form_with model: resource, url: registration_path(resource_name), local: true, method: :put do |f| %>
        <%= render "devise/shared/error_messages" %>
        
        <div class="pb-4">
          <%= f.label :username, "ユーザーネーム", class: "fw-bold mb-2" %>
          <span class="small text-orange fw-bold">必須</span>
          <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
        </div>
        
        <div class="pb-4">
          <%= f.label :email, "メールアドレス", class: "fw-bold mb-2" %>
          <span class="small text-orange fw-bold">必須</span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
        
        <div class="pb-4">
          <%= f.label :password, "パスワード", class: "fw-bold mb-2" %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "空欄のままなら変更しません", class: "form-control" %>
        </div>
        
        <div class="pb-4">
          <%= f.label :password_confirmation, "パスワード確認", class: "fw-bold mb-2" %>
          <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class: "form-control" %>
        </div>
        
        <div class="pb-4">
          <%= f.label :current_password, "現在のパスワード", class: "fw-bold mb-2" %>
          <span class="small text-orange fw-bold">必須</span>
          <%= f.password_field :current_password, autofocus: true, autocomplete: "current-password", placeholder: "変更を反映するには現在のパスワードを入力してください", class: "form-control" %>
        </div>
        
        <div class="pb-4">
          <%= f.label :avatar, "ユーザー画像", class: "fw-bold mb-2" %>
          <%= f.file_field :avatar, class: "d-block" %>
        </div>
        
        <div class="text-center">
          <%= f.submit "更新する", class: "btn btn-orange px-4 py-2" %>
        </div>
      <% end %>  
    </div>
  </div>
</div>